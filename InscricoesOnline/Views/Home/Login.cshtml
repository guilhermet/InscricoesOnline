@model InscricoesOnline.Models.Equipe


<div class="container">
    <div class="x_panel">
        <div class="x_title">
            <h2>Login</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="stepContainer">
                <div id="step-1" class="content clearfix">
                    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-label-left", @id = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.EventoId)
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Login
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">
                                Senha
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">
                            </label>
                            <label class="col-md-6 col-sm-6 col-xs-12 text-alert">
                                @ViewBag.Erro
                            </label>
                        </div>

                        <div class="panel-footer text-center">
                            <a href="/Home/Equipe/@Model.EventoId" class="btn btn-default"><i class="fa fa-check-circle"></i> Não possuo cadastro</a>
                            <input type="submit" value="Entrar" class="btn-login btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>