@model InscricoesOnline.Models.Equipe

@{
    ViewBag.Title = "Inscricoes";
}

<div class="container">
    <div class="x_panel">
        <div class="x_title">
            <h2>@Model.Nome</h2>
            <div class="clearfix"></div>
        </div>

        <div class="row">
            <div class="form-group col-md-3">
                <label>Nome do atleta:</label>
                <input type="text" class="form-control txtNome">
            </div>

            <div class="form-group col-md-2">
                <label>Nascimento:</label>
                <input type="text" class="form-control txtNascimento" />
            </div>

            <div class="form-group col-md-2">
                <label>Sexo:</label>
                <select type="text" class="form-control cbxSexo">
                    <option value="M">Masculino</option>
                    <option value="F">Feminino</option>
                </select>
            </div>

            <div class="form-group col-md-2">
                <label>Faixa:</label>
                <select type="text" class="form-control cbxFaixa"></select>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-3">
                <label>Categoria de Faixa:</label>
                <select type="text" class="form-control cbxFaixa"></select>
            </div>

            <div class="form-group col-md-2">
                <label>Categoria de Idade:</label>
                <select type="text" class="form-control cbxIdade"></select>
            </div>

            <div class="form-group col-md-2">
                <label>Categoria de Peso:</label>
                <select type="text" class="form-control cbxPesa"></select>
            </div>
        </div>
    </div>
</div>