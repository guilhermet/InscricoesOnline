@model IEnumerable<FPTKD.Models.Arbitro>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Arbitros</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Filiado.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URLFoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Filiado.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URLFoto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
